@model IEnumerable<Sessions_app.DTOs.DicaEconomiaDTO>

@{
    ViewData["Title"] = "Dicas de Economia";
}

<h1 class="mb-4">Lista de Dicas de Economia</h1>

<a href="@Url.Action("Create")" class="btn btn-success mb-3">Criar Nova Dica</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Título</th>
            <th>Descrição</th>
            <th>Data de Publicação</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dica in Model)
        {
            <tr>
                <td>@dica.DicaId</td>
                <td>@dica.Titulo</td>
                <td>@dica.Descricao</td>
                <td>@dica.DataPublicacao.ToString("dd/MM/yyyy")</td>
                <td>
                    <a href="@Url.Action("Details", new { id = dica.DicaId })" class="btn btn-info btn-sm">Detalhes</a>
                    <a href="@Url.Action("Edit", new { id = dica.DicaId })" class="btn btn-primary btn-sm">Editar</a>
                    <a href="@Url.Action("Delete", new { id = dica.DicaId })" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
