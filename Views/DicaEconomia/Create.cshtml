@model Sessions_app.DTOs.DicaEconomiaDTO

@{
    ViewData["Title"] = "Criar Dica de Economia";
}

<h1>Adicionar Nova Dica de Economia</h1>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label for="DicaId" class="form-label">ID da Dica</label>
        <input asp-for="DicaId" class="form-control" />
        <span asp-validation-for="DicaId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="Titulo" class="form-label">Título</label>
        <input asp-for="Titulo" class="form-control" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="Descricao" class="form-label">Descrição</label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="DataPublicacao" class="form-label">Data de Publicação</label>
        <input asp-for="DataPublicacao" type="date" class="form-control" />
        <span asp-validation-for="DataPublicacao" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Salvar</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
</form>
