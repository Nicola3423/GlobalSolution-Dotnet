@model IEnumerable<Sessions_app.DTOs.FeedbackUsuarioDTO>

@{
    ViewData["Title"] = "Feedbacks de Usuários";
}

<h1 class="mb-4">Lista de Feedbacks</h1>

<a href="@Url.Action("Create")" class="btn btn-success mb-3">Adicionar Feedback</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Usuário</th>
            <th>Conteúdo</th>
            <th>Mensagem</th>
            <th>Data</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var feedback in Model)
        {
            <tr>
                <td>@feedback.FeedbackId</td>
                <td>@feedback.UsuarioId</td>
                <td>@feedback.ConteudoId</td>
                <td>@feedback.Mensagem</td>
                <td>@feedback.DataFeedback.ToString("dd/MM/yyyy")</td>
                <td>
                    <a href="@Url.Action("Details", new { id = feedback.FeedbackId })" class="btn btn-info btn-sm">Detalhes</a>
                    <a href="@Url.Action("Edit", new { id = feedback.FeedbackId })" class="btn btn-primary btn-sm">Editar</a>
                    <a href="@Url.Action("Delete", new { id = feedback.FeedbackId })" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
