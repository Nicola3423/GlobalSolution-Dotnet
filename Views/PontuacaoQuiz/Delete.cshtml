@model Sessions_app.DTOs.PontuacaoQuizDTO

@{
    ViewData["Title"] = "Excluir Pontuação de Quiz";
}

<h1 class="mb-4">Excluir Pontuação</h1>

<div class="alert alert-danger" role="alert">
    Tem certeza de que deseja excluir esta pontuação?
</div>

<div>
    <h5>ID do Usuário: @Model.UsuarioId</h5>
    <h5>ID do Quiz: @Model.QuizId</h5>
    <p>Pontuação: @Model.Pontuacao</p>
    <p>Data de Participação: @Model.DataParticipacao.ToString("dd/MM/yyyy")</p>
</div>

<form asp-action="Delete" method="post">
    <input asp-for="PontuacaoId" type="hidden" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
</form>
