@model Sessions_app.DTOs.ConteudoDTO

@{
    ViewData["Title"] = "Editar Conteúdo";
}

<h1 class="mb-4">Editar Conteúdo</h1>

<form asp-action="Edit" method="post">
    <input asp-for="ConteudoId" type="hidden" />
    <div class="mb-3">
        <label for="Titulo" class="form-label">Título</label>
        <input asp-for="Titulo" class="form-control" required />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="Descricao" class="form-label">Descrição</label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="Tipo" class="form-label">Tipo</label>
        <input asp-for="Tipo" class="form-control" required />
        <span asp-validation-for="Tipo" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="DataPublicacao" class="form-label">Data de Publicação</label>
        <input asp-for="DataPublicacao" type="date" class="form-control" required />
        <span asp-validation-for="DataPublicacao" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
</form>
