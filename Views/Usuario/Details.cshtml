@model Sessions_app.DTOs.UsuarioDTO

@{
    ViewData["Title"] = "Detalhes do Usuário";
}

<h1 class="mb-4">Detalhes do Usuário</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Nome: @Model.Nome</h5>
        <p class="card-text">Email: @Model.Email</p>
        <p class="card-text">Data de Cadastro: @Model.DataCadastro.ToString("dd/MM/yyyy")</p>
        <a href="@Url.Action("Edit", new { id = Model.UsuarioId })" class="btn btn-primary">Editar</a>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Voltar</a>
    </div>
</div>
